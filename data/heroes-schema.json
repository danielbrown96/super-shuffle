{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "team": {
        "type": "string",
        "enum": [
          "X-Men",
          "Avengers",
          "Shield",
          ""
        ]
      },
      "set": {
        "type": "string",
        "enum": [
          "Core"
        ]
      },
      "classes": {
        "type": "object",
        "properties": {
          "strength": {
            "type": "integer",
            "minimum": 1,
            "maximum": 14
          },
          "range": {
            "type": "integer",
            "minimum": 1,
            "maximum": 14
          },
          "instinct": {
            "type": "integer",
            "minimum": 1,
            "maximum": 14
          },
          "covert": {
            "type": "integer",
            "minimum": 1,
            "maximum": 14
          },
          "tech": {
            "type": "integer",
            "minimum": 1,
            "maximum": 14
          }
        }
      },
      "mechanical-tags": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "discard": {
              "type": "integer"
            }
          }
        }
      },
      "synergy-tags": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "discard": {
              "type": "integer"
            },
            "team-xmen": {
              "type": "integer"
            }
          }
        }
      },
      "thematic-tags": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "xmen",
            "og-xmen",
            "mutant",
            "summers-family"
          ]
        }
      },
      "ability-tags": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "blaster",
            "lasers",
            "energy-controller",
            "telepath",
            "telekinesis"
          ]
        }
      },
      "purchasing-power": {
        "type": "integer",
        "minimum": 0,
        "maximum": 14
      },
      "attacking-power": {
        "type": "integer",
        "minimum": 0,
        "maximum": 14
      }
    },
    "required": [
      "name",
      "classes",
      "mechanical-tags",
      "synergy-tags",
      "thematic-tags",
      "ability-tags",
      "purchasing-power",
      "attacking-power"
    ]
  }
}
